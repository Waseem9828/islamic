
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper functions for clarity and reuse
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Admin check requires access to Firestore documents
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Profile Pictures:
    // - Publicly readable.
    // - Only the owner can upload, update, or delete.
    match /profile-pictures/{userId}/{fileName} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // Deposit Screenshots:
    // - Only the owner and admins can read.
    // - Only the owner can upload.
    // - We can add checks for file size and type for added security.
    match /deposit-screenshots/{userId}/{fileName} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) 
                    && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                    && request.resource.contentType.matches('image/.*'); // Must be an image
    }
  }
}
