rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =====================================================================
    //  Helper Functions
    // =====================================================================
    function isAdmin() {
      // User is an admin if their UID is in the roles_admin collection
      // or if their UID is the hardcoded super-admin UID.
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
             || request.auth.uid == "Mh28D81npYYDfC3z8mslVIPFu5H3";
    }

    function isOwner(userId) {
      // Check if the requesting user is the owner of the document.
      return request.auth != null && request.auth.uid == userId;
    }

    // =====================================================================
    //  Collection Rules
    // =====================================================================

    // users: Users manage their own profile. Admins manage all users.
    match /users/{userId} {
      allow read, update: if isOwner(userId) || isAdmin();
      allow create: if request.auth != null;
      allow delete: if isAdmin();
    }

    // wallets: Users read their own wallet. Admins read any wallet.
    // Writes are blocked to force use of trusted Cloud Functions.
    match /wallets/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if false;
    }

    // settings: Admins change site settings. All users can read them.
    match /settings/{docId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }

    // matches: Admins manage matches. All users can read them.
    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // depositRequests: Users create their own. Admins manage all.
    match /depositRequests/{requestId} {
        allow read: if isAdmin() || isOwner(resource.data.userId);
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isAdmin();
    }

    // withdrawalRequests: Users create their own. Admins manage all.
    match /withdrawalRequests/{requestId} {
        allow read: if isAdmin() || isOwner(resource.data.userId);
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isAdmin();
    }

    // transactions: Users read their own. Admins read all.
    // Writes are blocked to force use of trusted Cloud Functions.
    match /transactions/{transactionId} {
       allow read: if isAdmin() || isOwner(resource.data.userId);
       allow write: if false;
    }

    // roles_admin: Only admins can manage the list of admins.
    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
    }
  }
}