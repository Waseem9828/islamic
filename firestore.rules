rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =====================================================================
    //  Helper Functions
    // =====================================================================

    // Returns true if the user's UID exists in the admin roles collection.
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Returns true if the requesting user is the owner of the data.
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // =====================================================================
    //  Collection Rules
    // =====================================================================

    // users: Users can read/update their own profile. Admins can manage all.
    match /users/{userId} {
      allow read, update: if isOwner(userId) || isAdmin();
      allow create: if request.auth != null; // Any authenticated user can create their own profile.
      allow delete: if isAdmin();
    }

    // wallets: Users can read their own wallet. Admins can read any wallet.
    // Writes are blocked to force all balance changes through trusted Cloud Functions.
    match /wallets/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if false;
    }

    // settings: Admins can change site settings. All authenticated users can read them.
    match /settings/{docId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }

    // matches: All users can read matches. Admins can write/manage them.
    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

    // depositRequests: Users create their own. Admins can read/manage all.
    match /depositRequests/{requestId} {
        allow read: if isAdmin() || isOwner(resource.data.userId);
        // User creates a request for themselves.
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        // Admins can update or delete requests.
        allow update, delete: if isAdmin();
    }

    // withdrawalRequests: Users create their own. Admins can read/manage all.
    match /withdrawalRequests/{requestId} {
        allow read: if isAdmin() || isOwner(resource.data.userId);
        // User creates a request for themselves.
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        // Admins can update or delete requests.
        allow update, delete: if isAdmin();
    }

    // transactions: Users can read their own transactions. Admins can read all.
    // Writes are blocked to force all transactions through trusted Cloud Functions.
    match /transactions/{transactionId} {
       allow read: if isAdmin() || isOwner(resource.data.userId);
       allow write: if false;
    }

    // roles_admin: Admins can list and manage other admins.
    // Any authenticated user can check their own admin status.
    match /roles_admin/{userId} {
      allow get: if request.auth != null;
      allow list, create, update, delete: if isAdmin();
    }
  }
}
