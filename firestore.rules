/**
 * @fileoverview Firestore Security Rules for the Islamic Random Selector app.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user profiles and draw results.
 * Admin roles are managed via document existence in a dedicated collection.
 * Prayer times are treated as public, read-only data.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles, accessible only to the owning user.
 * - /roles_admin/{adminId}: Presence of a document grants admin privileges.
 * - /users/{userId}/drawResults/{drawResultId}: Stores draw results, accessible only to the owning user.
 * - /prayerTimes/{prayerTimeId}: Stores prayer times, publicly readable.
 *
 * Key Security Decisions:
 * - User listing is disallowed to protect privacy, except for admins.
 * - Admin status is determined by document existence, simplifying rule logic.
 * - Prayer times are publicly readable to avoid unnecessary authorization checks.
 *
 * Denormalization for Authorization:
 * - Draw results are stored as a subcollection of users to avoid `get()` calls for ownership checks.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /**
     * @description Enforces access control for user profiles. Only the user can read or write their own profile. Admins can read any profile.
     * @path /users/{userId}
     */
    match /users/{userId} {
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }
      
      function incomingData() {
        return request.resource.data;
      }

      function existingData() {
        return resource.data;
      }
      
      function hasValidCreateData(userId) {
        let incoming = incomingData();
        return incoming.id == userId &&
               incoming.email == request.auth.token.email &&
               !('isAdmin' in incoming);
      }

      function canUpdateProfile(userId) {
        let incoming = incomingData();
        let existing = existingData();
        // Users can update their profile, but cannot change immutable or admin-only fields.
        return isOwner(userId) &&
               incoming.id == existing.id &&
               incoming.email == existing.email &&
               incoming.createdAt == existing.createdAt &&
               (!('isAdmin' in incoming) || incoming.isAdmin == existing.isAdmin);
      }
      
      function canAdminUpdateProfile() {
          return isAdmin();
      }

      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin(); // Only admins can list users.
      allow create: if isOwner(userId) && hasValidCreateData(userId);
      allow update: if canUpdateProfile(userId) || canAdminUpdateProfile();
      allow delete: if isOwner(userId) || isAdmin();
    }

    /**
     * @description Manages admin roles. Presence of a document grants admin privileges.
     * @path /roles_admin/{adminId}
     */
    match /roles_admin/{adminId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Enforces access control for draw results. Only the owning user can read or write their draw results.
     * @path /users/{userId}/drawResults/{drawResultId}
     */
    match /users/{userId}/drawResults/{drawResultId} {
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows public read access to prayer times data. Write access is not permitted in this prototype.
     * @path /prayerTimes/{prayerTimeId}
     */
    match /prayerTimes/{prayerTimeId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows public read access to groups data, but write access is restricted to admins.
     * @path /groups/{groupId}
     */
    match /groups/{groupId} {
      allow get: if true;
      allow list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}
