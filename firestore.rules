rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the current user is an admin.
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    // Helper function to check if the user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Wallets: Users can read their own wallet. Only admins can update balances.
    match /wallets/{userId} {
      allow get: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow update: if isSignedIn() && isAdmin();
      allow create, delete: if false; 
    }

    // Deposit Requests:
    match /depositRequests/{docId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isSignedIn() 
                      && request.resource.data.userId == request.auth.uid
                      && request.resource.data.amount > 0
                      && request.resource.data.screenshotUrl is string
                      && request.resource.data.status == "pending"
                      && request.resource.data.keys().hasOnly(['userId', 'amount', 'screenshotUrl', 'status', 'createdAt']);
      allow update: if isSignedIn() && isAdmin();
      allow delete: if false;
    }

    // Withdrawal Requests: 
    match /withdrawalRequests/{docId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && isAdmin();
      allow delete: if false;
    }
    
    // Users: Basic profile access.
    match /users/{userId} {
        allow get, update: if isSignedIn() && (request.auth.uid == userId || isAdmin());
        allow create: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Matches
    match /matches/{matchId} {
      allow get: if isSignedIn() && (resource.data.players.hasAny([request.auth.uid]) || resource.data.privacy == 'public' || isAdmin());
      allow list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (resource.data.players.hasAny([request.auth.uid]) || isAdmin());
    }

    // Settings: Only admins can read or write payment settings.
    match /settings/{settingId} {
      allow get: if isSignedIn() && isAdmin();
      allow write: if isSignedIn() && isAdmin();
    }

    // Admin Roles: Allows checking for admin status.
    match /roles_admin/{userId} {
      allow get: if isSignedIn();
    }
  }
}
