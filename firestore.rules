/**
 * @fileoverview Firestore Security Rules for the Islamic Random Selector app.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user profiles and draw results.
 * Admin roles are managed via document existence in a dedicated collection.
 * Prayer times are treated as public, read-only data.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles, accessible only to the owning user.
 * - /roles_admin/{adminId}: Presence of a document grants admin privileges.
 * - /users/{userId}/drawResults/{drawResultId}: Stores draw results, accessible only to the owning user.
 * - /prayerTimes/{prayerTimeId}: Stores prayer times, publicly readable.
 *
 * Key Security Decisions:
 * - User listing is disallowed to protect privacy.
 * - Admin status is determined by document existence, simplifying rule logic.
 * - Prayer times are publicly readable to avoid unnecessary authorization checks.
 *
 * Denormalization for Authorization:
 * - Draw results are stored as a subcollection of users to avoid `get()` calls for ownership checks.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces access control for user profiles. Only the user can read or write their own profile.
     * @path /users/{userId}
     * @allow (create) User with ID 'user_abc' can create their profile: request.auth.uid == 'user_abc'
     * @allow (get, update, delete) User with ID 'user_abc' can read/update/delete their profile: request.auth.uid == 'user_abc'
     * @deny (create) User with ID 'user_xyz' cannot create a profile for 'user_abc': request.auth.uid != 'user_abc'
     * @deny (get, update, delete) User with ID 'user_xyz' cannot read/update/delete the profile for 'user_abc': request.auth.uid != 'user_abc'
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false; // User listing is disallowed.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages admin roles. Presence of a document grants admin privileges.
     * @path /roles_admin/{adminId}
     * @allow (get) Any authenticated user can check if an admin exists.
     * @allow (create) Only an existing admin can create new admin roles. (This requires custom backend logic to bootstrap the first admin.)
     * @allow (update, delete) Only an existing admin can modify admin roles.
     * @deny (create) Non-admin user cannot create admin roles.
     * @principle Admin roles are managed via document existence.
     */
    match /roles_admin/{adminId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isAdmin() {
        return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
      }

      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Enforces access control for draw results. Only the owning user can read or write their draw results.
     * @path /users/{userId}/drawResults/{drawResultId}
     * @allow (create) User with ID 'user_abc' can create a draw result under their profile: request.auth.uid == 'user_abc'
     * @allow (get, update, delete) User with ID 'user_abc' can read/update/delete their draw results: request.auth.uid == 'user_abc'
     * @deny (create) User with ID 'user_xyz' cannot create a draw result under 'user_abc': request.auth.uid != 'user_abc'
     * @deny (get, update, delete) User with ID 'user_xyz' cannot read/update/delete draw results for 'user_abc': request.auth.uid != 'user_abc'
     * @principle Enforces document ownership for all operations within the user's data tree.
     */
    match /users/{userId}/drawResults/{drawResultId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows public read access to prayer times data.  Write access is not permitted in this prototype.
     * @path /prayerTimes/{prayerTimeId}
     * @allow (get, list) Any user can read prayer times.
     * @deny (create, update, delete) No one can create, update, or delete prayer times.
     * @principle Allows public read access for global data.
     */
    match /prayerTimes/{prayerTimeId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}